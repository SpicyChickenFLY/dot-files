# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  color_good = "#55aa00"
  color_degraded = "#bbbb55"
  color_bad = "#ff5555"
  interval = 5
}

# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
# order += "load"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "volume_master"
order += "tztime local"
order += "battery all"

wireless _first_ {
  format_up = "󰖩 %ip"
  format_down = "󰖪 "
}

ethernet _first_ {
  format_up = "󰱓 %ip"
  format_down = "󰅛 "
}

battery all {
  format = "%status %percentage %remaining"
  format_down = ""
  last_full_capacity = true
  integer_battery_capacity = true
  low_threshold = 30
  threshold_type = percentage
  hide_seconds = true
  status_chr = "⚡"
  status_bat = " "
  status_unk = " "
  status_full = " "
}

cpu_usage {
  format = " %usage"
}

disk "/" {
  format = " %avail"
  # prefix_type = "decimal"
}

load {
  format = "%1min"
}

memory {
  format = " %available"
  threshold_degraded = "1G"
  format_degraded = " <%available"
}

tztime local {
  format = " %m-%d %H:%M"
}

volume master {
    format = "󰕾 %volume"
    format_muted = "󰝟 "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
